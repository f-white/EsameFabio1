@{
    ViewData["Title"] = "Delete Attività";
}
@using System.Collections.Generic;
@model List<AttivitaModel>;
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="display-4">Test Javascript Post Person</h3>
            ID: <input type="text" id="personID" />
            <button class="btn btn-primary" onclick="deletePerson()">Delete Person</button>
        </div>
    </div>
    @{
        <table>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].NomeAttivita</td>
                    <td>@Model[i].DescrizioneAttivita</td>
                    <td>@Model[i].DataInizio</td>
                    <td>@Model[i].DataFine</td>
                    <td>@Model[i].NumeroPosti</td>
                    <td>@Model[i].PrezzoAttivita</td>
                    <td><button class="btn-sm btn-danger" onclick="deletePersonById('@Model[i].IdAttivita')">Delete</button></td>
                </tr>
            }
        </table>
    }
</div>