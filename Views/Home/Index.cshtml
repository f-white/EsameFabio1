@{
	ViewData["Title"] = "Home";
}
@using Microsoft.AspNetCore.Identity
@using EsameFabio1.DB.Entities
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager


@using System.Collections.Generic;

@inject EsameFabio1.DB.DBContext dbContext


@model List<AttivitaModel>

<!-- CAROUSEL -->
<div class="container-fluid">

	<div class="row">

		<div id="demo" class="carousel slide col-12" data-ride="carousel" data-interval="2000">

			<div class="carousel-inner">
				@for (int i = 0; i < Model.Count; i++)
				{

					<div class="carousel-item @(Model[i] == Model.First() ? "active" : "")">
						<div class="d-flex align-items-center justify-content-center h-100">
						<img src="@(Model[i].ImgAtt)" alt="@(Model[i].DescrizioneAttivita)" class="d-block w-100 img-fluid ristretta" style="height: 600px !important">
						</div>
						<div class="carousel-caption">
							<a class="h2">Le nostre esperienze</a>
							<br>
							<a class="h3 small">Lasciati tentare...</a>
						</div>
					</div>


				}
			</div>

			<!-- Left and right controls -->
			<a class="carousel-control-prev" href="#demo" data-slide="prev">
				<span class="carousel-control-prev-icon"></span>
			</a>
			<a class="carousel-control-next" href="#demo" data-slide="next">
				<span class="carousel-control-next-icon"></span>
			</a>
		</div>

	</div>
</div>
