@{
    ViewData["Title"] = "Inserisci attività";
}
@model AttivitaModel;
<h1>@ViewData["Title"]</h1>

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/App.js"></script>
</head>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table>
                <tr>
                    <td> Nome Attività: <input type="text" id="NomeAtt" /> </td>
                </tr>
                <tr>
                    <td>
                        Descrizione Attività:
                        <input type="text" id="DescrizioneAtt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Data Inizio:
                        <input type="date" id="DataInizioAtt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Data Fine:
                        <input type="date" id="DataFineAtt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Numero Posti:
                        <input type="text" id="PostiAtt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Prezzo:
                        <input type="text" id="PrezzoAtt" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Immagine:
                        <input type="text" id="ImgAtt" />
                    </td>
                </tr>
            </table>
            <button class="btn btn-primary" onclick="insertAtt()">Inserisci Attività</button>
        </div>
    </div>
</div>